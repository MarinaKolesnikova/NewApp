@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Calndr/jquery-ui.css">
    <link rel="stylesheet" href="~/Calndr/fullcalendar.css">
    <link rel="stylesheet" href="~/Content/Style.css">
    <script src="http://code.jquery.com/jquery.min.js"></script>
    <script src="~/Calndr/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />
    <!--multiselect-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-css/1.4.6/select2-bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title – приложение ASP.NET</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

</head>
<body style="margin-bottom:45px;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyPlan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style="position:absolute; left:1.8em; font-size:36px" } )
            </div>
            <div class="navbar-collapse collapse" style="position:absolute; right:3.6em; font-size:18px;">
                <ul class="nav navbar-nav">
                    <li >@Html.ActionLink("Авторизація", "Authorization", "Account")</li>
                    <li >@Html.ActionLink("Реєстрація", "Registration", "Account")</li>
                </ul>
            </div>

        </div>

    </div>

    <nav id="navB" ; class="">
        <ul id="linksul" ; class="">
            <li id="linksli" ; class="bw">
                <img src="~/images/caldr.png" class="card-img-top" alt="no image">
                @Html.ActionLink("Календар", "Index", "Home", null, new { @class = "linksa" })

            </li>

            @if (ViewBag.VIP == 1)
            {
            <li id="linksli" ; class="bw">
                <img src="~/images/meet.png" class="card-img-top" alt="no image">
                @Html.ActionLink("Зустрічі", "Meeting", "Meeting", null, new { @class = "linksa" })
            </li>}
            else
            {
            <li id="linksli" ; class="bw" onclick="alert('Розділом ЗУСТРІЧІ можуть користуватися лише VIP користувачі')">
                <img src="~/images/meet.png" class="card-img-top" alt="no image">
                @Html.ActionLink("Зустрічі", "Meeting", "Meeting", null, new { @class = "linksa disabledcont" })
            </li>}

            <li id="linksli" ; class="bw">
                <img src="~/images/cont.png" class="card-img-top" alt="no image">
                @Html.ActionLink("Контакти", "Contacts", "Contact", null,
    new { @class = "linksa" })
            </li>

            <li id="linksli" ; class="S">
                <img src="~/images/set.png" class="card-img-top" alt="no image">
                @Html.ActionLink("Налаштування", "Settings", "Settings", null,
            new { @class = "linksa" })
            </li>
        </ul>
    </nav>


    @*@Scripts.Render("~/bundles/jquery")*@
    <div id="cont" style="top:50px; margin-bottom:20px;">
        <div style=" margin-left:10px; ">


            <div id="calendar" style="margin-bottom:10px"></div>

            <div id="dialog" style="background-color:#22242b; width:350px; overflow:hidden;">
                <form style="width:100%;">
                    <div class="form-group">
                        <label for="title" style="color:#ffffff">Назва події</label>
                        <input type="text" autocomplete="off" class="form-control" id="title" placeholder="назва події">
                    </div>
                    <div class="form-group">
                        <label for="start " style="color:#ffffff">Початок події</label>
                        <input readonly type="text" class="form-control datepicker "  id="start" placeholder="початок події">
                    </div>
                    <div class="form-group">
                        <label for="end" style="color:#ffffff">Кінець події</label>
                        <input readonly type="text" class="form-control datepicker" id="end" placeholder="кінець події">
                    </div>
                    <div class="form-group">
                        <label for="description" style="color:#ffffff">Опис події</label>
                        <textarea class="form-control" style="resize:none;" id="description" rows="3"></textarea>
                    </div>
                    <label for="contacts" style="color:#ffffff">Додати контакти</label>
                    <div class="s2-example">
                        <p>
                            <select class="js-example-basic-multiple js-states form-control" style="width:310px;" id="contacts" multiple="multiple"></select>
                        </p>
                    </div>
                  
                    <div class="form-group">
                        <label id="error" style="color:#ff0000"></label>
                        <div style="text-align:center">

                            <button type="button" id="btnDelete" style="left:10px" class="btn btn-danger">Delete</button>
                            <button type="button" id="btnSave" style="right:10px" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>

            
            
    <script src="~/Calndr/lib/moment.min.js"></script>
    <script src="~/Calndr/fullcalendar.js"></script>
    <script src="~/Calndr/lang/uk.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.js"></script>
    <script src="~/Calndr/main.js"></script>

    </div>
    </div>
</body>
</html>







